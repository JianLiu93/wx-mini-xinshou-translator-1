/**changeLang.wxss**/

.container {
  background-color: #f8f8f8;
  padding-bottom: 60rpx;
  padding-top: 0;
}

.lang-list {
  display: flex;
  flex-direction: column;
}

.title {
  text-align: center;
  width: 100%;
  background: #fff;
  border-bottom: 1px solid #ececec;
  padding: 50rpx 40rpx 20rpx 40rpx;
  color: #666;
  font-size: 28rpx;
  font-weight: 500;
  font-family: PingFang SC;
}

.item {
  width: 100%;
  padding-left: 60rpx;
  background-color: #fff;
}

.item-inner {
  padding:  20rpx 60rpx 20rpx 0;
  display: flex;
  align-items: center;
  border-top: 1px solid #ececec;
}

.item .txt {
  flex: 1;
}

.item .icon {
  margin-left: auto;
  color: #aaa;
}

.icon.icon-checked {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}

.item:nth-child(2) .item-inner {
  border-top: none;
}